<%= form_with(model: review, local: true) do |form| %>
  <% if review.errors.any? %>
  <div class="container">
    <div class="card bg-light col-md-6">
      <div class="card-body" align="left">
        <div style="color: #d9534f;">
          <h4 style="color: #d9534f;"><b><%= pluralize(review.errors.count, "error") %> occurred:</b></h4>
          <% review.errors.full_messages.each_with_index do |message, index| %>
            <%= index+1 %>. <%= message %><br/>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :name %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :name, id: :review_name, class: "form-control", placeholder: "Enter your name" %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :email %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :email, id: :review_email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :description %>
        </div>
        <div class="col-sm-6">
          <%= form.text_area :description, id: :review_description, class: "form-control",
          rows: 5, placeholder: "What is on your mind?", id: "textarea" %>
        </div>
      </div>

      <%= form.submit "Post Review", class: "btn btn-outline-success" %>
    </div>
  </div>
</div>

<% end %>
