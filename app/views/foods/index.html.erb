<h2 class="title">Recommended Foods</h2>
<div class="container">
  <div class="row" align="center">
    <% @foods.each do |food| %>
      <div class="col-md-4">
        <div class="card">
          <img class="card-img-top" src="assets/<%= food.img %>">
          <div class="card-body">
            <h5 class="card-title"><%= food.name %></h5>
            <p class="card-text">To see the full description and other details of <%= food.name %>, please click Show Details.</p>
            <%= link_to 'Show Details', food_path(food), class: "btn btn-success" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
